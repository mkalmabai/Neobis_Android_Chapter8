<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.LoginFragment">

    <TextView
        android:id="@+id/registerBarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registrationText"
        android:fontFamily="@font/gothamprobold"
        android:textSize="20sp"
        android:layout_margin="30dp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/backIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back"
        app:layout_constraintBottom_toBottomOf="@+id/registerBarText"
        app:layout_constraintEnd_toStartOf="@+id/registerBarText"
        app:layout_constraintHorizontal_bias="0.336"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/registerBarText" />

    <ImageView
        android:id="@+id/lockIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/lockicon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registerBarText" />

    <TextView
        android:id="@+id/repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/repetePass"
        android:fontFamily="@font/gothamprobold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lockIcon" />

    <TextView
        android:id="@+id/requirements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/gothampro"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        android:text="@string/requirments"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repeat" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/furtherButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/background_button"
        android:fontFamily="@font/gothamprobold"
        android:text="@string/login"
        android:textColor="@color/white"
        android:enabled="false"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repeatPasswordField" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/passwordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/gothamprobold"
        android:gravity="center"
        android:inputType="textPassword"
        android:letterSpacing="0.2"
        android:maxLength="10"
        android:textColor="@color/black2"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/requirements" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/repeatPasswordField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/gothamprobold"
        android:gravity="center"
        android:inputType="textPassword"
        android:letterSpacing="0.2"
        android:maxLength="10"
        android:textColor="@color/black2"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordField" />

    <ToggleButton
        android:id="@+id/togglePasswordButton"
        android:layout_width="44dp"
        android:layout_height="28dp"
        android:background="@drawable/hide_and_show_password"
        android:textOff=""
        android:textOn=""
        app:layout_constraintBottom_toBottomOf="@+id/registerBarText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.664"
        app:layout_constraintStart_toEndOf="@+id/registerBarText"
        app:layout_constraintTop_toTopOf="@+id/registerBarText"
         />


</androidx.constraintlayout.widget.ConstraintLayout>